[Desktop Entry]
Name=DOOM BFA
Exec=DOOMBFA.sh
Icon=io.github.maddecoder.Classic-RBDOOM-3-BFG
Terminal=false
Type=Application
Categories=Game;
PrefersNonDefaultGPU=true
Actions=open-launcher;open-save-folder

[Desktop Action open-launcher]
Name=Open Launcher
Exec=DOOMBFA.sh -open-launcher

[Desktop Action open-save-folder]
Name=Open Save Folder
Exec=sh -c "mkdir -p \\$HOME/.doombfa/ && xdg-open \\$HOME/.doombfa/"
